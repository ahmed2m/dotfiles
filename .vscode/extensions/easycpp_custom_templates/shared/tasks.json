{
    "version": "2.0.0",
    "options": {
        "env": {
            "PATH": "${env:PATH}"
        }
    },
    "tasks": [
        {
            "label": "Build C++ project",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
            	"-f",
            	"make/Makefile",
            ]
        },
        {
            "label": "Build & run C++ project",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "make",
            "args": [
            	"-f",
            	"make/Makefile"
                "run"
            ]
        }
    ]
}